{
  "name": "@radar/relay-types",
  "version": "2.0.0-alpha.1",
  "description": "TypeScript type definitions for the Radar Relay API and SDK.",
  "author": "RadarTech",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RadarTech/types.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "npm-run-all -s clean:dist compile-watch",
    "build": "npm-run-all -s clean:dist compile",
    "compile": "microbundle build src/index.ts -f cjs",
    "compile-watch": "microbundle watch src/index.ts -f cjs",
    "clean": "npm-run-all -s clean:*",
    "clean:dist": "rimraf dist",
    "clean:cache": "rimraf .rts2_cache_* .cache",
    "test": "echo \"No Tests Defined\" && exit 0",
    "lint": "tslint --fix --project .",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@0x/types": "^2.0.2",
    "@0x/utils": "4.1.0"
  },
  "devDependencies": {
    "@radar/tslint-config": "^5.0.1",
    "@types/node": "^11.9.1",
    "microbundle": "^0.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.14.0",
    "rimraf": "^2.6.3",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  }
}
